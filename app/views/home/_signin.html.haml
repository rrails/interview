%div.container
  %div.form.form-signin
    = form_tag '/signin' do
      = label_tag :name
      = text_field_tag :name, nil, :autofocus => true,:class => 'input-block-level'
      %div
        = label_tag :password
        = password_field_tag :password, nil,:class => 'horiz'
        = submit_tag 'Sign in', :class => 'horiz sign_in button radius'
  %div.columns.large-9
